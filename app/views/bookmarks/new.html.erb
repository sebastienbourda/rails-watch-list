
<div class="container-fluid">
  <h2>All movies</h2>
  <div class="row">
    <% Movie.all.each do |movie| %>
        <div class="col-4">
          <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="<%= movie.poster_url %>" class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= movie.title %></h5>
                  <p class="card-text"><%= movie.overview %></p>
                  <p class="card-text"><small class="text-muted">Last updated <%= movie.updated_at %> </small></p>
                </div>
                <div class="card-body">
                  <button type="button" class="btn btn-light">Add to list</button>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
